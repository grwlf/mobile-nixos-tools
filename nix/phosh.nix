  nixpkgs = {
    system = system;
    # overlays = [ (import ../modules/librem-nixos) ];
  };

  programs.geary.enable = false;
  programs.calls.enable = true;

  environment.systemPackages = with pkgs; [
    ncdu
    htop
    vim
    xlibs.xeyes
    tdesktop
    firefox-wayland
    lollypop
    pavucontrol

    chatty
  ];

